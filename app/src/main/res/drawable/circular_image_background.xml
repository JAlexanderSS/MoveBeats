<!-- circular_image_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de sombra -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#e0e0e0" /> <!-- Color de la sombra -->
        </shape>
    </item>

    <!-- Capa de fondo circular -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Fondo blanco para la imagen -->
        </shape>
    </item>
</layer-list>
